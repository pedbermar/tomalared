<% if flash[:notice] %>
	$("#main").prepend("<div id=\"notice\"><%=flash[:notice]%></div>");
	$("#notice").fadeIn("fast", function(){
		setTimeout(function() {
			$("#notice").remove();
		}, 2000);
	});
<% end %>
<% if flash[:error] %>
	$("#main").prepend("<div id=\"error\"><%=flash[:error]%></div>");
	$("#error").fadeIn("fast", function(){
		setTimeout(function() {
			$("#error").remove();
		}, 2000);
	});
<% end %>
