<div id="login">
<br /><br />
<%= image_tag( "/gfx/logo.png", :alt => "Logo", :class => 'logo') %>
<br /><br /><br />
<br />
<%= form_for @user_session, :as => :user_session, :url => { :action => "create" } do |f| %>
  <%= render "shared/error_messages", :target => @user_session %>
  <%= f.text_field :email, :placeholder => 'Email' %><br />
  <br />
  <%= f.password_field :password, :placeholder => 'Password' %><br />
  <br />
  <%= f.check_box :remember_me %><%= f.label :remember_me%> <t>   <%= f.submit "Login" %>

<p><%= link_to 'Regístrate', :controller => 'users', :action => 'new' %></p>
<p><%= link_to 'Olvidaste tu contraseña?', password_resets_path %></p>
<% end %>
</div>

